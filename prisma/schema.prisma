generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_DIRECT_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  imageUrl  String?
  isAdmin   Boolean @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  board     Board[]
  recording Recording[]
  paymentAttempts PaymentAttempt[]
  subscription Subscription?
}

model Board {
  id         String      @id @default(uuid())
  userId     String
  title      String
  inviteCode String?     @unique
  isArchived Boolean     @default(false)
  status     BoardStatus @default(PREPARING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  canvasData Json?
  expiresAt  DateTime?
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  recording  Recording[]

  @@index([userId])
}

model Recording {
  id                 String   @id @default(uuid())
  videoUrl           String
  userId             String
  boardId            String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  cloudinaryPublicId String?
  board              Board?    @relation(fields: [boardId], references: [id], onDelete: SetNull)
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Subscription {
  id                String               @id @default(uuid())
  user              User                 @relation(fields: [userId], references: [id])
  userId            String               @unique
  paddleSubscriptionId String?           @unique
  status            SubscriptionStatus   @default(TRIALING)
  trialEndsAt       DateTime
  currentPeriodStart DateTime? 
  currentPeriodEnd  DateTime?             // When the current paid period ends
  cancelAtPeriodEnd Boolean               @default(false)
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
}

model WebhookEvent {
  id            String   @id @default(cuid())
  paddleEventId String   @unique  // Paddle's event.id
  eventType     String
  payload       String   @db.Text
  processedAt   DateTime @default(now())

  @@index([paddleEventId])
  @@index([processedAt])
}

model PaymentAttempt {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  CANCELED
  EXPIRED
}


enum BoardStatus {
  LIVE
  PREPARING
  PAUSED
  ENDED
}
